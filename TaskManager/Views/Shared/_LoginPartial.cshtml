@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
   
    <ul class="nav navbar-nav navbar-right">
        @{

            var temp = User.Identity.Name.Split('|')[1];

            
        }
        <li>
            @Html.ActionLink("Merhaba " +temp, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Oturumu kapat</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
      <!-- <li>@Html.ActionLink("Kaydol", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>!-->
        <li>@Html.ActionLink("Oturum aç", "Login", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>@Html.ActionLink("Yönetici Paneli", "Admin", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
