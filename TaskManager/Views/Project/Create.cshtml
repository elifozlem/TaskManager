@model TaskManager.Project

@{
    ViewBag.Title = "Proje Oluştur";
}



@using (Html.BeginForm("Create", "Project", new { managerid = ViewBag.ManagerId,managername=ViewBag.ManagerName }, FormMethod.Post,null))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Proje Oluştur</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectName,"Proje", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectKey,"Anahtar", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectKey, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectKey, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectManager, "Yönetici", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
             @Html.LabelFor(model => model.ProjectManager, (string)@ViewBag.ManagerName)
                @Html.ValidationMessageFor(model => model.ProjectManager, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye geri dön", "Index", new { id = ViewBag.ManagerId, name = ViewBag.ManagerName })
</div>
